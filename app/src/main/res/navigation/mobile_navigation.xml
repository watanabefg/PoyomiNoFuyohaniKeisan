<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.zubopoyo.fuyohani.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.zubopoyo.fuyohani.ui.input.InputFragment"
        android:label="@string/title_input"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_roster"
        android:name="com.zubopoyo.fuyohani.ui.roster.RosterFragment"
        android:label="@string/title_record"
        tools:layout="@layout/fragment_roster" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.zubopoyo.fuyohani.ui.settings.SettingFragment"
        android:label="@string/title_setting"
        tools:layout="@layout/fragment_settings"/>
</navigation>
